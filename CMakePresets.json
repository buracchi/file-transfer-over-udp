{
  "version": 3,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 22,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "ninja",
      "hidden": true,
      "description": "Generate Ninja project files",
      "generator": "Ninja"
    },
    {
      "name": "vcpkg",
      "hidden": true,
      "description": "Configure with vcpkg toolchain",
      "cacheVariables": {
        "CMAKE_TOOLCHAIN_FILE": {
          "value": "${sourceDir}/vcpkg/scripts/buildsystems/vcpkg.cmake",
          "type": "FILEPATH"
        }
      }
    },
    {
      "name": "x64-debug",
      "hidden": true,
      "architecture": {
        "value": "x64",
        "strategy": "external"
      },
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug"
      }
    },
    {
      "name": "x64-release",
      "hidden": true,
      "architecture": {
        "value": "x64",
        "strategy": "external"
      },
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release"
      }
    },
    {
      "name": "default",
      "hidden": true,
      "description": "Default configuration presets",
      "inherits": [
        "ninja",
        "vcpkg"
      ],
      "binaryDir": "${sourceDir}/out/build/${presetName}",
      "installDir": "${sourceDir}/out/install/${presetName}",
      "cacheVariables": {
        "CMAKE_EXPORT_COMPILE_COMMANDS": true
      }
    },
    {
      "name": "linux-default",
      "hidden": true,
      "inherits": "default",
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Linux"
      },
      "vendor": {
        "microsoft.com/VisualStudioSettings/CMake/1.0": {
          "hostOS": [
            "Linux"
          ]
        },
        "microsoft.com/VisualStudioRemoteSettings/CMake/1.0": {
          "sourceDir": "$env{HOME}/.vs/${sourceDirName}",
          "forceWSL1Toolset": true
        },
        "jetbrains.com/clion": {
          "toolchain": "WSL"
        }
      }
    },
    {
      "name": "x64-linux-debug",
      "displayName": "x64 Debug",
      "inherits": [
        "linux-default",
        "x64-debug"
      ],
      "cacheVariables": {
        "CMAKE_C_FLAGS_DEBUG": "-std=gnu23 -Wall -Wextra -pedantic -O0 -g3 -ggdb3 -D_DEBUG -fanalyzer -fsanitize=undefined -fno-omit-frame-pointer -fno-inline $env{C_FLAGS_DEBUG}",
        "CMAKE_CXX_FLAGS_DEBUG": "-std=c++23 -Wall -Wextra -pedantic -O0 -g3 -ggdb3 -D_DEBUG -fsanitize=undefined -fno-omit-frame-pointer -fno-inline $env{CXX_FLAGS_DEBUG}"
      },
      "environment": {
        "C_FLAGS_DEBUG": "",
        "CXX_FLAGS_DEBUG": ""
      }
    },
    {
      "name": "x64-linux-debug-asan",
      "displayName": "x64 Debug",
      "inherits": "x64-linux-debug",
      "environment": {
        "C_FLAGS_DEBUG": "-fsanitize=address -fsanitize=leak -fsanitize=undefined",
        "CXX_FLAGS_DEBUG": "-fsanitize=address -fsanitize=leak -fsanitize=undefined"
      }
    },
    {
      "name": "x64-linux-release",
      "displayName": "x64 Release",
      "inherits": [
        "linux-default",
        "x64-release"
      ],
      "cacheVariables": {
        "CMAKE_C_FLAGS_RELEASE": "-std=gnu23 -Wall -Wextra -pedantic",
        "CMAKE_CXX_FLAGS_RELEASE": "-std=c++23 -Wall -Wextra -pedantic"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "x64-linux-debug",
      "configurePreset": "x64-linux-debug"
    },
    {
      "name": "x64-linux-release",
      "configurePreset": "x64-linux-release"
    }
  ],
  "testPresets": [
    {
      "name": "default",
      "hidden": true,
      "output": {
        "outputOnFailure": true
      },
      "execution": {
        "noTestsAction": "ignore",
        "stopOnFailure": false
      }
    },
    {
      "name": "x64-linux-debug",
      "inherits": "default",
      "configurePreset": "x64-linux-debug"
    },
    {
      "name": "x64-linux-release",
      "inherits": "default",
      "configurePreset": "x64-linux-release"
    }
  ]
}
